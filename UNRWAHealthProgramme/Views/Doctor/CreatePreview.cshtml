@model DoctorViewDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/create a preview.css">
    <link rel="stylesheet" href="~/css/All/Toaster.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Preview Info</title>
</head>
<body>
  
    <!--Modals Buttons-->
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem; z-index:0">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="font-size: 17px;"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
                <ul class="navbar-nav" style="background-color: #1d86df;">
                    <li class="nav-item active">
                        <a class="navbar-brand ">
                            <img src="~/images/user-color-64.png" alt="logo" class="img1 img-fluid">
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.UserName</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.HealthCenter.Name Center</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.Team.Name Team</a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="Logout" asp-controller="Clerick" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Logout
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg>
                        </a>

                    </li>


                </ul>
            </div>
            <div class="nav__icons">
                <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
            </div>


        </nav>

    <div class="container" style="margin-top:5rem">
        <h1 style="text-align: center; color: #0662ad8a; margin-bottom: -20px; margin-top: 20px;">patient preview</h1>
        <div class=" row">
            <input type="hidden" value="@Model.PreviewId" id="previewId"/>
            <div class="col-lg-4 col-md-12 col-ms-12">
                <div class="box_2" style="height: 12rem;">

                        <p class="text_2" style=" color: white;text-align: center"> Choose an Illness <i class='bx bxs-notepad' style="padding-top: 3rem;"></i> :</p>

                    <a href="" target="_blank" data-toggle="modal" data-target="#exampleModal_1" data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1">Click here to view </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-ms-12">
                <div class="box_2" style=" height: 12rem;">

                        <p class="text_2" style=" color: white;text-align: center"> Choose a Medicine<i class='bx bxs-capsule' style="padding-top: 3rem;"></i>:</p>
                    <a href="" target="_blank" data-scroll data-toggle="modal" data-target="#exampleModal_2" class="btn btn-light btn-radius button_1 btn-brd   effect-1">Click here to view </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-ms-12">
                <div class="box_2" style=" height: 12rem;">

                        <div class="text_2" style=" color: white;text-align: center">
                      <p>  choose a analysis     <i class='bx bxs-flask' style="padding-top: 3rem;"></i>:</p>
                        <a data-toggle="modal" data-target="#exampleModal_3" style="margin-top: 12px;" data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1">Click here to view </a>
                        </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-ms-12">
                <div class="box_2" style=" height: 12rem;">

                        <div class="text_2" style=" color: white;text-align: center">
                       <p> Choose a Measurement <i class='bx bxs-first-aid' style="padding-top: 3rem;"></i> :</p>
                        <a data-toggle="modal" data-target="#exampleModal_4" style="margin-top: 12px;" data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1">Click here to view </a>
                        </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-12 col-ms-12">
            </div>
            <div class="col-lg-4 col-md-12 col-ms-12">
                        <a asp-action="PatientInfo" 
                        asp-controller="Doctor"
                        asp-route-personId="@Model.PersonInfo.Id" 
                        asp-route-previewId="@Model.PreviewId"
                        asp-route-reservationId="0"
                           data-scroll class="btn bttn btn-light btn-radius  btn-brd   effect-1">Cancel</a>
            </div>

        </div>
    </div>

    <input asp-for="PreviewId" type="hidden" value="@Model.PreviewId" />
    <!-- Modals -->
    <!-- Illness -->
    <div class="modal fade" id="exampleModal_1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #1d86df ;"> Illness</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #1d86df ;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="height: 300px;">
                    <div class="inner">
                        <form asp-action="post">
                            <div class="form-group" style="margin-bottom: 40px;">
                                <span>Illness Type</span>
                                <select asp-for="IllnessTypeId" id="PreviewIllnessTypeId" asp-items="@(new SelectList(Model.IllnessTypes,"Id","Name"))"
                                        class=" form-select" aria-label="Default select example">
                                    <option selected></option>
                                </select>

                            </div>

                            <div class="form-group" style="margin-bottom: 20px;">
                                <span>Illness</span>
                                <select asp-for="IllnessId" id="PreviewIllnessId" asp-items="@(new SelectList(Model.AllIllnesses,"Id","IllnessName"))"
                                class=" form-select" aria-label="Default select example">
                                    <option selected></option>
                                </select>
                                  <span id="IllnessIdValidation" style="display: none; color: red; margin-top: -41px; font-size: 15px;  margin-left: -19px;">illness type required</span>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="saveIllness" type="submit" class="btn btn-primary btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Save</button>
                        <button type="button" class="btn btn-secondary  btn btn-light btn-radius button_1 btn-brd grd1 effect-1" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Medicines -->
    <div class="modal fade" id="exampleModal_2" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #1d86df ;"> select a Medicine </h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #1d86df ;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="height: 540px;">
                    <div class="inner" style="height: 400px;">
                        <form>
                            <div class="form-group" style="margin-bottom: 40px;">
                                    <span>Type</span>
                                    <select asp-for="MedicineTypeId" id="MedicineTypeId" asp-items="@(new SelectList(Model.MedicineTypes,"Id","Type"))"
                                            class="form-select" aria-label="Default select example" style="color: #1d86df; width: 300px;">
                                        <option selected></option>
                                    </select>
                            </div>
                            <dive class="form-group" style="margin-bottom: 40px;">
                                <span>Medicine</span>
                                <select asp-items="@(new SelectList(Model.Medicines,"Id","Name")) " id="PreviewMedicineId"
                                        class="form-select" aria-label="Default select example">
                                    <option selected></option>
                                </select>
                                <span id="medicineIdValidation" style="display: none; color: red; margin-top: -41px; font-size: 15px;  margin-left: -19px;">medicine is required</span>

                            </dive>

                            <div class="form-group">
                                <span style="font-size: 15px;">Amount:</span>
                                <input id="medicineAmount" type="text" class="form-control" style="width: 300px;" required>
                                 <span id="amountValidation" style="display: none; color: red; margin-top: -41px; font-size: 15px;  margin-left: -19px;">amount is required</span>
                            </div>
                          
                        </form>
                        <div class="modal-footer">
                            <button id="saveMedicine" type="submit" class="btn btn-primary btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Save</button>
                                <button type="button" class="btn btn-secondary  btn btn-light btn-radius button_1 btn-brd grd1 effect-1" data-dismiss="modal">Cancel</button>
                        </div>
                    </div>
                </div>
               

            </div>
        </div>
    </div>


    <!-- Modal labTest -->
    <div class="modal fade" id="exampleModal_3" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #1d86df ;"> Choose a Lab Test</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #1d86df ;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="height: 300px;">
                    <div class="inner">
                        <form>
                                <div class="form-group" style="    margin-bottom: 9px;   margin-top: -19px;">
                                <span>Type</span>
                                <select asp-for="LabTestTypeId" id="LabTestTypeId" asp-items="@(new SelectList(Model.LabTestTypes,"Id","Type"))"
                                        class="form-select" aria-label="Default select example" style="color: #1d86df; width: 300px;">
                                    <option selected></option>
                                </select>
                            </div>
                            <dive class="form-group" style="margin-bottom: 20px;">
                                <span>Lab Test</span>
                                <select asp-items="@(new SelectList(Model.LabTests,"Id","Name")) " id="PreviewLabTestId"
                                        class="form-select" aria-label="Default select example">
                                    <option selected></option>
                                </select>
                                  <span id="labTestIdValidation" style="display: none; color: red; margin-top: -41px; font-size: 15px;  margin-left: -19px;">labtest is required</span>
                            </dive>

                            <div class="form-group">
                                <span style="font-size: 15px;">Analysis Date :</span>
                                <input type="date" class="form-control" id="LabTestDate" required>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="modal-footer">
                    <button id="saveLabtest" type="submit" class="btn btn-primary btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Save</button>
                        <button type="button" class="btn btn-secondary  btn btn-light btn-radius button_1 btn-brd grd1 effect-1" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <div id="snackbar">Some text some message..</div>
    <!-- Modal measurements -->
    <div class="modal fade" id="exampleModal_4" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel" style="color: #1d86df ;"> choose a measurement</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="color: #1d86df ;">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body" style="height: 200px;">
                    <div class="inner" style="height: 30px;">
                        <form>
                            <label class="form-group" style="margin-bottom: 40px;">
                              <span>Measurement</span>
                                <select asp-items="@(new SelectList(Model.AllMeasurements,"Id","Name")) " id="PreviewMeasurementId"
                                        class="form-select" aria-label="Default select example">
                                    <option selected></option>
                                </select>
                                <span id="meIdValidation" style="display: none; color: red; margin-top: -41px; font-size: 15px;  margin-left: -19px;">mesurement required</span>

                            </label>

                        </form>
                    </div>
                </div>
                <div class="modal-footer">

                    <button type="button" id="saveMeasurement" class="btn btn-primary btn btn-light btn-radius button_1 btn-brd grd1 effect-1">Save</button>
                        <button type="button" class="btn btn-secondary  btn btn-light btn-radius button_1 btn-brd grd1 effect-1" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="~/js/Doctor/PreviewMedicineFilter2.js"></script>
    <script src="~/js/Doctor/PreviewIllnessFilter.js"></script>
    <script src="~/js/Doctor/PreviewLabTestFilter2.js"></script>
    <script src="~/js/Doctor/AddIllenssesToPreview5.js"></script>
    <script src="~/js/Doctor/AddLabTestToPreview4.js"></script>
    <script src="~/js/Doctor/AddMedicine4.js"></script>
    <script src="~/js/Doctor/AddMeasurementToPreview1.js"></script>
    <!--validations-->

        <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>

        <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

        <script src="~/lib/jquery/dist/jquery.js"> </script>
        

</body>
</html>
