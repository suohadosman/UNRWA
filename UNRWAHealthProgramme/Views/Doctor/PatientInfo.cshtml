@model DoctorViewDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/patient record.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/All/Toaster.css">

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Patient Info</title>
</head>
<body>
    @section Scripts{
            <partial name="_ValidationScriptsPartial">
            }
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem;">
           
            <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
                <ul class="navbar-nav" style="background-color: #1d86df;">
                    <li class="nav-item active">
                        <a class="navbar-brand ">
                            <img src="~/images/user-color-64.png" alt="logo" class="img1 img-fluid">
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.UserName</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.HealthCenter.Name Center</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.Team.Name Team</a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="Queue" asp-controller="Doctor" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Back
                        </a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="Logout" asp-controller="Clerick" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Logout
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg>
                        </a>

                    </li>


                </ul>
            </div>
            <div class="nav__icons">
                <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
            </div>


        </nav>

    <div class="container" style="margin-top:7rem">
        <div class=" row">
            <div class="col-lg-3 col-md-12 col-ms-12">
                <div class="box_1">
                   
                       <h1 class="text_1"> @Model.PersonInfo.FirstName @Model.PersonInfo.LastName</h1>
                       <div  style='color:#1d86df;font-size: 25px ;padding-left: 12px; margin-top: 25px;'>ID: @Model.PersonInfo.Id</div>
                       <div style='color:#1d86df;font-size: 25px ;padding-left: 12px; margin-top: 25px;'> NCD: @Model.PersonInfo.NCD</div>
                       <div style="display: grid; font-size: 30px ;padding-left: 20px;margin-top: 15px;"><i class='bx bx-phone' style='color:#1d86df'>:@Model.PersonInfo.PhoneNumber</i></div>

                </div>
            </div>
            <div class="col-lg-6 col-md-12 col-ms-12">
             <div class="box_2">
    <i class='bx bxs-flask' style='color:#1d86df ; font-size: 35px; padding: 30px; '></i>
    <h1 class="text_2">All LabTests </h1>
    <hr >
    <a asp-action="PatientLabTests" asp-controller="Doctor" 
    asp-route-personId="@Model.PersonInfo.Id"
    asp-route-previewId="@Model.PreviewId"
                               data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1">Display </a>
             </div>
             <div class="box_2" style="margin-top: 10px;">
                <i class='bx bxs-capsule' style='color:#1d86df ; font-size: 35px; padding: 30px; '></i>
                <h1 class="text_2">All Medicines </h1>
                <hr >
                    <a asp-action="PatientMedicines" asp-controller="Doctor" 
                               asp-route-personId="@Model.PersonInfo.Id"
                               asp-route-previewId="@Model.PreviewId"
                               data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1">Display </a>
                         </div>
                         <div class="box_2" style="margin-top: 10px;">
                            <i class='bx bxs-first-aid' style='color:#1d86df ; font-size: 35px; padding: 30px; '></i>
                            <h1 class="text_2">All Measurements </h1>
                            <hr >
                    <a asp-action="PatientMesurements" asp-controller="Doctor" 
                    asp-route-personId="@Model.PersonInfo.Id"
                               asp-route-previewId="@Model.PreviewId"
                               data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1">Display </a>
                </div>
             </div>

            <div class="col-lg-3 col-md-12 col-ms-12" >
              <div class="box_2" style="margin-top: 15px; height: 7rem; margin-left: 20px">
                    <label style='color:#1d86df;font-size: 16px ;padding-left: 12px; margin-top: 25px;'>
                            Last LabTest:
                        </label>
                        </br> @if (Model.LabTestResults.Count() != 0)
                        {
                            <label style='color:#1d86df;font-size: 16px ;padding-left: 12px; margin-top: 25px;'>
                            @Model.LabTestResults.FirstOrDefault()!.LabTestName  @Model.LabTestResults.FirstOrDefault()!.Result  @Model.LabTestResults.FirstOrDefault()!.Unit

                            </label>
                    }


                         </div>
                         <hr>
                         <div class="box_2" style="margin-top: 15px; margin-left: 20px;height: 7rem;">
                          <label  style='color:#1d86df;font-size: 16px ;padding-left: 12px; margin-top: 25px;'>Last medicine</label>
                        </br>
                         @if(Model.LastMedicine != null)
                         {
                            <label style='color:#1d86df;font-size: 16px ;padding-left: 12px; margin-top: 25px;'>
                                @Model.LastMedicine.Medicine.Type : @Model.LastMedicine.Medicine.Name
                        </label>

 }

                        </div>
                        <hr>
                        <div class="box_2" style="margin-top: 15px; height: 7rem; margin-left: 20px">
                        <label style='color:#1d86df;font-size: 16px ;padding-left: 12px; margin-top: 25px;'>
                            Last Mesurement: </br> @if (Model.AllPatientMeasurements.FirstOrDefault() != null)
                        {
                            @Model.AllPatientMeasurements.FirstOrDefault().Name @Model.AllPatientMeasurements.FirstOrDefault().Result @Model.AllPatientMeasurements.FirstOrDefault().Unit
                        }
                    </label>
                        </div>
                        <hr>
                        <a asp-action="CreatePreview" asp-controller="Doctor" asp-route-personId="@Model.PersonInfo.Id" asp-route-previewId="@Model.PreviewId" data-scroll class="btn btn-light btn-radius button_1 btn-brd   effect-1" style="width: 100%; margin-left: 2rem;">Create a preview </a>

            </div>


        </div>

    </div>

 <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>