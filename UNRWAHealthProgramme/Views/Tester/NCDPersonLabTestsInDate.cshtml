@model TesterDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=\, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/Tester/personLabTestsInDate.css" />
    <!--Table Links-->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" id="bootstrap-css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.csshttps://cdn.datatables.net/1.13.5/css/dataTables.bootstrap4.min.css">
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.5/js/dataTables.bootstrap4.min.js"></script>
    <!--Icon Link-->
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="~/css/All/Toaster.css" />
    <title>Document</title>
</head>
<body>
    @section Scripts{
            <partial name="_ValidationScriptsPartial">
            }
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem; z-index :0">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="font-size: 17px;"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
                <ul class="navbar-nav" style="background-color: #1d86df;">
                    <li class="nav-item active">
                        <a class="navbar-brand ">
                            <img src="~/images/user-color-64.png" alt="logo" class="img1 img-fluid">
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.UserName</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.HealthCenter.Name Center</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.Team.Name Team</a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="NCDReports" asp-controller="Tester" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Back
                        </a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="Logout" asp-controller="Clerick" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Logout
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg>
                        </a>

                    </li>


                </ul>
            </div>
            <div class="nav__icons">
                <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
            </div>


        </nav>

            <h1 style="color: #1d86df; margin-top: 80px; text-align: center">
                LABORATORY REFERRAL/REPORT
            </h1>
            <table id="example" class="table table-bordered" style="width:1000px; text-align:center; margin:auto">
                <tr>
                    <td style="font-size: 20px; color: #1d86df">Patient Name: @Model.PersonInfo.FirstName @Model.PersonInfo.LastName </td>
                    <td style="font-size: 20px; color: #1d86df">Health Center: @Model.PersonLabTestResultInDate.FirstOrDefault().HealthCenter </td>
                </tr>
                <tr>
                    <td style="font-size: 20px; color: #1d86df">Date: @Model.DateOfLabTest</td>
                    <td style="font-size: 20px; color: #1d86df">Dr: @Model.PersonLabTestResultInDate.FirstOrDefault().DoctorName</td>

                </tr>
            </table>
            <hr style="color: #1d86df" />
            <div class="container">

        @foreach (var item in Model.LabTestTypes)
        {
                    <table id="example" class="table table-bordered" style="width:1000px; text-align:center; margin:auto">
                        <tr>
                            <td>
                                <h1 style="color: #1d86df; text-align: center">@item.Type</h1>
                                <hr style="color: #1d86df" />
                            <div style="display: flex;justify-content: space-evenly; flex-flow: wrap;">
                            @foreach (var labTest in Model.AllLabTest)
                            {
                                if (labTest.TypeId == item.Id)
                                {
                                            <div class="col-lg-6 col-ms-12 col-md-12" style="margin:auto">

                                      @*  @foreach (var result in Model.PersonLabTestResultInDate)
                                        {
                                            if (result.LabTestId == labTest.Id)
                                            {
                                                        <input class="form-check-input"
                                                               type="checkbox"
                                                               id="flexCheckDefault"
                                                               checked />
                                            }
                                            else
                                            {
                                                        <input class="form-check-input"
                                                               type="checkbox"
                                                               id="flexCheckDefault" />
                                            }
                                        }*@
                                                <label style="font-size: 20px; color: #1d86df">@labTest.Name: </label>
                                        @foreach (var result in Model.PersonLabTestResultInDate)
                                        {
                                            if (result.LabTestId == labTest.Id)
                                            {
                                                if (result.ResultType == IUNRWA_ShareKernal.Enum.LabTest.LabTestResultType.Value)
                                                {
                                                            <label> @result.Result @result.Unit</label>
                                                }
                                                else
                                                {
                                                            <label style="font-size: 20px; color: #1d86df"> @result.PNResult</label>
                                                }
                                            }
                                        }
                                            </div>
                                }
                            }

                                </div>
                            </td>
                        </tr>
                    </table>
                    <hr style="color: #1d86df" />

        }
        
            </div>
 
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
                    integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
                    crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
                    integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
                    crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
                    integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
                    crossorigin="anonymous"></script>
</body>
</html>
