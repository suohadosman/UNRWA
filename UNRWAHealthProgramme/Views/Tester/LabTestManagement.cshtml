@*            <table id="example" class="table table-striped table-bordered" style="width:100%">
*@
        <table id="example" class="table table-striped table-bordered" >

<thead >
            <tr>
                <th>Test Type</th>
                <th>Test Name</th>
                <th>Posetive/Negative Normal Result</th>
                <th>Normal Result Value</th>
                <th>Min Normal Result Value</th>
                <th>Max Normal Result Value</th>
                <th style="width: 25%">Available/Not available</th>
            </tr>
        </thead>
        <tbody>
           @foreach (var item in Model.AllLabTest)
            {
                        <tr>
                            <td>@item.Type</td>
                            <td>@item.Name</td>
                            @if(item.PNNormalResult != null)
                    {
                        <td>@item.PNNormalResult</td>

                    }
                    else
                    {
                        <td></td>
                    }
                    @if (item.MaxValue.HasValue && item.MinValue.HasValue && item.MinValue == 0 && item.MaxValue == 0)
                    {
                            <td> @item.NormalResultValue @item.Unit</td>
                        <td></td>
                        <td></td>

                    }
                    else
                    {
                                <td></td>
                                <td>@item.MinValue @item.Unit</td>
                                <td>@item.MaxValue @item.Unit</td>
                    }


                    <td>
                        @if (item.IsAvaliable == true)
                        {
                                    <a asp-action="MakeLabeTestUnAvailable" asp-controller="Tester" asp-route-labTestId ="@item.Id"
                                       data-scroll
                                                               class="btn btn-light btn-radius button_1 btn-brd grd1 effect-1">
                                        Make it unavailable
                            </a>
                        }
                        else
                        {
                                    <a asp-action="MakeLabeTestAvailable" asp-controller="Tester" asp-route-labTestId="@item.Id"
                                       data-scroll
                                       class="btn btn-light btn-radius button_1 btn-brd grd1 effect-1">
                                        Make it available
                                    </a>
                        }
                    </td>
                            
                        </tr>
            }
         </tbody>
    </table>
