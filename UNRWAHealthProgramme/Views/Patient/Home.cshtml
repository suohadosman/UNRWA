@model PatientViewDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/patient/home .css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />

   
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="font-size: 17px;"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
            <ul class="navbar-nav" style="background-color: #1d86df;">

                <li class="nav-item active">
                    <a asp-action="Welcome" asp-controller="Patient" class="nav-link btn" id="logout-icon"
                       style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                        Back
                    </a>

                </li>


            </ul>
        </div>
        <div class="nav__icons">
            <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
        </div>


    </nav>
    <div class="container" style="margin-top: 208px">
        <h1 class="text_1" style="text-align: center">Welcome @Model.PersonInfo.FirstName @Model.PersonInfo.LastName in Patient service</h1>
        <div class="row" style="margin-top: 20rem">
            <div class="col-lg-2 col-md-2 col-sm-12">
                <div class="row"
                     data-toggle="modal"
                     data-target="#exampleModal"
                    >
                    <div class="service-time one"
                         style="background: #2895f1; margin-left: 70px !important">
                        <span class="info-icon">
                            <i class="bx bxs-calendar-heart"></i>
                        </span>
                        <a asp-action="AllNextReservations" asp-controller="Patient" asp-route-personId="@Model.PersonInfo.Id"
                           style="font-size:20px;     color: white; text-decoration: none;">Dates</a>
                        <div class="time-table-section"></div>
                    </div>
                </div>
            </div>

            <div class="col-lg-2 col-md-2 col-sm-12">
                <div class="row"
                     data-toggle="modal"
                     data-target="#exampleModal"
                     >
                    <div class="service-time three"
                         style="background: #0071d1; margin-left: 40px !important">
                        <span class="info-icon"><i class="bx bxs-first-aid"></i></span>
                        <a asp-action="AllMeasurements" asp-controller="Patient" asp-route-personId="@Model.PersonInfo.Id"
                           style="font-size:20px;  color: white; text-decoration: none;">Measurements</a>
                        <div class="time-table-section"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12">
                <div class="row"
                     data-toggle="modal"
                     data-target="#exampleModal"
                    >
                    <div class="service-time three"
                         style="background: #0060b1; margin-left: 40px !important">
                        <span class="info-icon"><i class="bx bxs-capsule"></i></span>
                        <a asp-action="AllPatientMedicines" asp-controller="Patient" asp-route-personId="@Model.PersonInfo.Id"
                           style="font-size:20px;  color: white; text-decoration: none;">Medicines</a>
                        <div class="time-table-section"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-2 col-md-2 col-sm-12">
                <div class="row"
                     data-toggle="modal"
                     data-target="#exampleModal"
                     >
                    <div class="service-time one"
                         style="background: #2895f1; margin-left: 30px !important">
                        <span class="info-icon"><i class="bx bxs-flask"></i></span>
                        <a asp-action="AllPatientLabTests" asp-controller="Patient" asp-route-personId="@Model.PersonInfo.Id"
                           style="font-size:20px;  color: white; text-decoration: none;">Lab Tests</a>
                        <div class="time-table-section"></div>      
                    </div>
                </div>
            </div>
           @if(Model.PersonInfo.NCDId != 0)
            {
                <div class="col-lg-2 col-md-2 col-sm-12">
                    <div class="row"
                         data-toggle="modal"
                         data-target="#exampleModal">
                        <div class="service-time middle"
                             style="background: #0071d1; margin-left: -10px">
                            <span class="info-icon">
                                <i class="bx bxs-calendar-heart"></i>
                            </span>
                            <a asp-action="NCDPatientInfo" asp-controller="Patient" asp-route-personId="@Model.PersonInfo.Id"
                               style="font-size:20px;  color: white; text-decoration: none;">NCD</a>
                            <div class="time-table-section"></div>
                        </div>
                    </div>
                </div>
            }

            <div class="col-lg-2 col-md-2 col-sm-12">
                <div class="row"
                     data-toggle="modal"
                     data-target="#exampleModal"
                     >
                    <div class="service-time three"
                         style="background: #2895f1; margin-left: -10px">
                        <span class="info-icon">
                            <i class="bx bx-plus-medical" style="color: #fffdfd"></i>
                        </span>
                        <a asp-action="AllPatientIllness" asp-controller="Patient" asp-route-personId="@Model.PersonInfo.Id"
                           style="font-size:20px;  color: white; text-decoration: none;">Illness</a>
                        <div class="time-table-section"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<!-- ALL JS FILES -->
<script src="~/js/jquery.min.js"></script>
<script src="~/js/popper.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
<!-- ALL PLUGINS -->
<script src="~/js/jquery.magnific-popup.min.js"></script>
