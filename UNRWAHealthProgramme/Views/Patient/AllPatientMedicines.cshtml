    <link rel="stylesheet" href="~/css/Patient/medicine.css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />
    <title>Document</title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/patient/home .css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem;">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="font-size: 17px;"></span>
        </button>
        <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
            <ul class="navbar-nav" style="background-color: #1d86df;">

                <li class="nav-item active">
                    <a asp-action="Home" asp-controller="Patient" asp-route-personId="@Model.PersonIdToSearch" class="nav-link btn" id="logout-icon"
                       style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                        Back
                    </a>

                </li>


            </ul>
        </div>
        <div class="nav__icons">
            <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
        </div>


    </nav>
    <div class="row">
@*        <div class="col-md-6 col-lg-4 col-ms-12"></div>
*@@*        <div class="col-md-6 col-lg-4 col-ms-12"
             style="margin-top: -50px; margin-bottom: -30px">
            <div class="CardInner" style="margin-top:150px">
                <label>search By medicine Name: </label>
                <div class="box">
                    <div class="InputContainer">
                        <input placeholder="search" />
                    </div>

                    <button type="button" class="btn btn-primary Icon">
                        <i class="bx bx-search-alt-2"
                           style="color: #1d86df; font-size: 30px"></i>
                    </button>
                </div>
            </div>
        </div>
*@    </div>
    <div class="container" style="    margin-top: 75px;
">
        <div class="row" style="justify-content: space-between">
        @foreach (var item in Model.AllMedicines)
            {
                <div class="col-lg-4 col-md-12 col-sm-12">
                    <div class="card" style="margin-top: 10px">
                        <h3 style="color: #1d86df">@item.Name</h3>

                        <div class="face face1">
                            <div class="content">
                                <span class="info-icon">
                                    <i class="bx bxs-capsule"
                                       style="color: aliceblue; font-size: 70px"></i>
                                </span>
                            </div>
                        </div>

                        <div class="face face2">
                            <div class="content"
                                 style="color: #1d86df !important; font-weight: 700">
                                <p>The last date of the medicine : @item.LastDate.ToShortDateString()</p>
                                <p>Quantity: @item.Amount</p>
                                <p>There are untaken : @item.isTaken </p>
                            </div>
                        </div>
                    </div>
                </div>

            }       
        </div>
    </div>
</body>
</html>
