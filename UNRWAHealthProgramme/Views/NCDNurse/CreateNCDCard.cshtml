@model NCDNurseViewDto
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/NCDNurse/CreateNCDCard.css" />
        <link rel="stylesheet" href="~/css/Tester/style3.css" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css"
          rel="stylesheet" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
          crossorigin="anonymous" />
    <title>Document</title>
</head>
<body>
    @section Scripts{
            <partial name="_ValidationScriptsPartial">
            }
        <nav class="navbar navbar-expand-lg navbar-light fixed-top" style="background-color: #1d86df; height: 3.5rem; z-index :0">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon" style="font-size: 17px;"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarNavDropdown" style="background-color: #1d86df;">
                <ul class="navbar-nav" style="background-color: w;">
                    <li class="nav-item active">
                        <a class="navbar-brand ">
                            <img src="~/images/user-color-64.png" alt="logo" class="img1 img-fluid">
                        </a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.UserName</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.HealthCenter.Name Center</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link" style="font-size: 17px;">@Model.User.Team.Name Team</a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="Queue" asp-controller="NCDNurse" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Back
                        </a>

                    </li>
                    <li class="nav-item active">
                        <a asp-action="Logout" asp-controller="Clerick" class="nav-link btn" id="logout-icon"
                           style="font-size: 17px; border: solid 1px; width: 132px; padding: 6px;text-align: center;">
                            Logout
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-right" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M10 12.5a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v2a.5.5 0 0 0 1 0v-2A1.5 1.5 0 0 0 9.5 2h-8A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-2a.5.5 0 0 0-1 0v2z" />
                                <path fill-rule="evenodd" d="M15.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 0 0-.708.708L14.293 7.5H5.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                            </svg>
                        </a>

                    </li>


                </ul>
            </div>
            <div class="nav__icons">
                <img src="~/images/unrwa-logo-0DB0E000FE-seeklogo.com.png" alt="logo" class=" img__1 img-fluid">
            </div>


        </nav>

        <div class="container" style=" width: 80%;  margin-top: 105px;  box-shadow: 1px 1px 20px 4px #607D8B; height: 562px;">
        <h1 style="text-align: center; color: white; margin-top: 70px">
            Information Patient NCD
        </h1>

        <div class="col-md-12 col-lg-12 col-ms-12">
            <form action="#" style="margin-top: 50px">
                <div class="main-user-info">
                    <div class="user-input-box">
                            <label for="" style=" color: white;"> Patient ID </label>

                        <input type="text"
                               value="@Model.CreatedNCDCardInfo.personId"
                               readonly
                               placeholder="Enter Home adress" />
                    </div>
                    <div class="user-input-box">
                            <label for="fullName" style=" color: white;"> Patient Name</label>

                        <input type="text"
                                       value="@Model.CreatedNCDCardInfo.PersonName"
                               id="fullName"
                               readonly
                               name="fullName"
                               placeholder="" />
                    </div>

                    <div class="user-input-box">
                            <label style=" color: white;">Creation Date </label>

                                <input id="fullName" name="fullName" value="@Model.CreatedNCDCardInfo.CreationDate" />
                    </div>

                    <div class="user-input-box">
                            <label for="fullName" style=" color: white;">Card Number </label>

                        <input type="text"
                                value="@Model.CreatedNCDCardInfo.CardNumber"
                               id="fullName"
                               readonly
                               placeholder="" />
                    </div>
                </div>
            </form>
            <div class="button">
                    <a asp-action="Queue" asp-controller="NCDNurse"
                    style="color: aliceblue"
                  
                   data-scroll
                   class="btn btn-light btn-radius button_2 btn-brd grd1 effect-1">OK</a>
            </div>
        </div>
    </div>
</body>
</html>
